@model KidsFirstTracker.Models.PreferencesCreate

@{
    ViewBag.Title = "Create";
}

<h2>Add Preferences</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Add child preferences below:</h4>
