@model IEnumerable<KidsFirstTracker.Models.DomFamilyListItem>

@{
    ViewBag.Title = "Index";
}
<div class="jumbotron">
    <img src="~/Images/ShortLogo.png" class="text-center img-rounded" width="200" height="200"  alt="Logo">
    <h2>Domestic Families</h2>
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{<div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Parent1Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Parent2Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.IsHomeStudyDone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomeStudyDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Parent1Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parent2Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.IsHomeStudyDone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeStudyDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DomFamId }) |
                @Html.ActionLink("Details", "Details", new { id = item.DomFamId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DomFamId })
            </td>
        </tr>
    }

</table>
